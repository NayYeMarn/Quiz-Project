<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:gravity="top|center"
	android:background="#FF0400FF">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="200dp"
		android:text="လိုအပ်သော ကိန်းကိုဖြည့်ပါ ။\n\n ၃၀,၂၉,၂၇,၂၆,၂၄,၂၃,၂၁,၂၀,?"
		android:textColor="#FF1AFF00"
		android:textStyle="bold"
		android:textSize="15sp"
		android:background="#FF1E7FBA"
		android:gravity="center"
		android:shadowColor="#FFFF0000"
		android:shadowRadius="4"/>

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="၁၆"
		android:onClick="bfalse1"
		android:layout_marginTop="10dp"
		android:textStyle="bold"
		android:textColor="#FF000000"/>

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="၁၇"
		android:onClick="bfalse2"
		android:textStyle="bold"
		android:textColor="#FF000000"/>

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="၁၈"
		android:onClick="bright"
		android:textStyle="bold"
		android:textColor="#FF000000"/>

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="၂၈"
		android:onClick="bfalse3"
		android:textStyle="bold"
		android:textColor="#FF000000"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:id="@+id/tv"
		android:textColor="#FF0A00FF"
		android:textStyle="bold"
		android:layout_marginTop="19dp"
		android:shadowColor="#FF000000"
		android:shadowRadius="4"
		android:gravity="center"
		android:textSize="15sp"
		android:background="#FF8F267A"/>

</LinearLayout>

